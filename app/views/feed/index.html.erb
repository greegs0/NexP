<% content_for :page_title, "Fil d'actualité" %>

<div class="max-w-7xl mx-auto">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Colonne principale : Feed -->
    <div class="lg:col-span-2">
      <!-- Header -->
      <div class="mb-6 animate-fade-in-up">
        <h1 class="text-3xl md:text-4xl font-bold text-foreground tracking-tight mb-2">
          Fil d'actualité<span class="text-primary">.</span>
        </h1>
        <p class="text-muted-foreground">Découvre ce qui se passe dans ta communauté</p>
      </div>

      <!-- Créer un post -->
      <div class="card mb-6 animate-fade-in-up" style="animation-delay: 100ms;">
        <%= link_to new_post_path, class: "flex items-center gap-3 p-4 bg-secondary/20 rounded hover:bg-secondary/30 transition-colors" do %>
          <div class="w-10 h-10 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold">
            <%= current_user.display_name[0].upcase %>
          </div>
          <span class="text-muted-foreground flex-1">Quoi de neuf <%= current_user.display_name.split.first %> ?</span>
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        <% end %>
      </div>

      <!-- Posts du feed -->
      <% if @posts.any? %>
        <div class="space-y-6">
          <% @posts.each_with_index do |post, index| %>
            <div class="card animate-fade-in-up" style="animation-delay: <%= 150 + (index * 50) %>ms;">
              <!-- Header du post -->
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold">
                    <%= post.user.display_name[0].upcase %>
                  </div>
                  <div>
                    <%= link_to post.user.display_name, user_path(post.user), class: "font-bold text-foreground hover:text-primary" %>
                    <div class="text-sm text-muted-foreground">
                      <%= time_ago_in_words(post.created_at) %> ago
                    </div>
                  </div>
                </div>
              </div>

              <!-- Contenu -->
              <div class="mb-4">
                <p class="text-foreground whitespace-pre-wrap"><%= truncate(post.content, length: 300) %></p>
                <% if post.content.length > 300 %>
                  <%= link_to "Lire la suite", post_path(post), class: "text-primary hover:text-primary/80 text-sm font-medium" %>
                <% end %>
                <% if post.image.attached? %>
                  <div class="mt-3">
                    <%= link_to post_path(post) do %>
                      <%= image_tag post.image.variant(resize_to_limit: [600, 400]), class: "rounded-lg border border-border w-full hover:opacity-90 transition-opacity" %>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <!-- Actions -->
              <div class="flex items-center gap-6 text-muted-foreground border-t border-border pt-4">
                <%= render 'posts/like_button', post: post, size: 5, show_count_label: false %>

                <%= link_to post_path(post), class: "inline-flex items-center gap-2 hover:text-primary transition-colors group" do %>
                  <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <span class="text-sm font-medium"><%= post.comments_count %></span>
                <% end %>

                <%= button_to bookmarks_path(post_id: post.id), method: :post, class: "inline-flex items-center gap-2 hover:text-primary transition-colors ml-auto" do %>
                  <svg class="w-5 h-5" fill="<%= current_user.bookmarks.exists?(bookmarkable: post) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center mt-8">
          <%= paginate @posts %>
        </div>
      <% else %>
        <div class="card text-center py-16">
          <svg class="w-16 h-16 text-muted-foreground mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <p class="text-muted-foreground mb-6">Ton feed est vide. Commence par suivre des développeurs!</p>
          <%= link_to users_path, class: "btn-primary inline-flex items-center gap-2" do %>
            Trouver des développeurs
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Colonne latérale : Suggestions et projets -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Suggestions d'utilisateurs -->
      <% if @suggested_users.any? %>
        <div class="card animate-fade-in-up" style="animation-delay: 100ms;">
          <h3 class="font-bold text-foreground mb-4">Suggestions pour toi</h3>
          <div class="space-y-4">
            <% @suggested_users.each do |user| %>
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold flex-shrink-0">
                  <%= user.display_name[0].upcase %>
                </div>
                <div class="flex-1 min-w-0">
                  <%= link_to user.display_name, user_path(user), class: "font-bold text-sm text-foreground hover:text-primary block truncate" %>
                  <p class="text-xs text-muted-foreground truncate"><%= user.skills.limit(2).pluck(:name).join(', ') %></p>
                </div>
                <%= button_to follow_user_path(user), method: :post, class: "btn-primary text-xs px-3 py-1" do %>
                  Suivre
                <% end %>
              </div>
            <% end %>
          </div>
          <%= link_to users_path, class: "text-primary hover:text-primary/80 text-sm font-medium block mt-4" do %>
            Voir plus →
          <% end %>
        </div>
      <% end %>

      <!-- Projets récents -->
      <% if @recent_projects.any? %>
        <div class="card animate-fade-in-up" style="animation-delay: 200ms;">
          <h3 class="font-bold text-foreground mb-4">Projets récents</h3>
          <div class="space-y-4">
            <% @recent_projects.each do |project| %>
              <%= link_to project_path(project), class: "block group" do %>
                <h4 class="font-bold text-sm text-foreground group-hover:text-primary mb-1"><%= truncate(project.title, length: 40) %></h4>
                <p class="text-xs text-muted-foreground mb-2">Par <%= project.owner.display_name %></p>
                <% if project.skills.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% project.skills.limit(3).each do |skill| %>
                      <span class="text-xs px-2 py-0.5 bg-secondary text-secondary-foreground rounded">
                        <%= skill.name %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <%= link_to projects_path, class: "text-primary hover:text-primary/80 text-sm font-medium block mt-4" do %>
            Voir tous les projets →
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
