<% if suggestions.values.flatten.any? %>
  <div class="space-y-4 mb-6">

    <!-- Recommande pour toi -->
    <% if suggestions[:based_on_skills].any? %>
      <div class="card animate-fade-in-up bg-gradient-to-r from-primary/5 to-transparent" style="animation-delay: 250ms;">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <h3 class="font-bold text-foreground">Recommande pour toi</h3>
          <span class="text-xs text-muted-foreground">- base sur tes competences</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <% suggestions[:based_on_skills].each do |item| %>
            <%= render 'skills/skill_suggestion_button', skill: item[:skill], color: 'primary' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Complete ta stack -->
    <% if suggestions[:complete_your_stack].any? %>
      <div class="card animate-fade-in-up bg-gradient-to-r from-emerald-500/5 to-transparent" style="animation-delay: 300ms;">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <h3 class="font-bold text-foreground">Complete ta stack</h3>
          <span class="text-xs text-muted-foreground">- skills complementaires</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <% suggestions[:complete_your_stack].each do |item| %>
            <%= render 'skills/skill_suggestion_button', skill: item[:skill], color: 'emerald' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Populaires dans ta categorie -->
    <% if suggestions[:popular_in_category].any? %>
      <div class="card animate-fade-in-up bg-gradient-to-r from-blue-500/5 to-transparent" style="animation-delay: 350ms;">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <h3 class="font-bold text-foreground">Populaires</h3>
          <span class="text-xs text-muted-foreground">- dans ta categorie principale</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <% suggestions[:popular_in_category].each do |item| %>
            <%= render 'skills/skill_suggestion_button', skill: item[:skill], color: 'blue' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Tendances -->
    <% if suggestions[:trending_now].any? %>
      <div class="card animate-fade-in-up bg-gradient-to-r from-orange-500/5 to-transparent" style="animation-delay: 400ms;">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <h3 class="font-bold text-foreground">Tendances</h3>
          <span class="text-xs text-muted-foreground">- skills en vogue</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <% suggestions[:trending_now].each do |item| %>
            <%= render 'skills/skill_suggestion_button', skill: item[:skill], color: 'orange' %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
<% end %>
