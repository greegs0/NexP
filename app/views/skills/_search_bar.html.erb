<div class="card mb-6 animate-fade-in-up overflow-visible relative z-50" style="animation-delay: 100ms;"
     data-controller="skill-autocomplete"
     data-skill-autocomplete-url-value="<%= autocomplete_skills_path %>"
     data-skill-autocomplete-search-url-value="<%= skills_path %>">
  <form data-action="submit->skill-autocomplete#performSearch" onsubmit="event.preventDefault()">
    <div class="relative group">
      <div class="absolute left-0 top-0 bottom-0 w-12 flex items-center justify-center pointer-events-none z-10">
        <svg class="w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <input type="text"
             name="search"
             placeholder="Rechercher une compÃ©tence... (js, python, backend...)"
             value="<%= params[:search] %>"
             class="w-full bg-secondary border border-border text-foreground placeholder:text-muted-foreground py-3 pl-12 pr-12 rounded transition-all focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20"
             autocomplete="off"
             aria-label="Rechercher une compÃ©tence"
             data-skill-autocomplete-target="input"
             data-action="input->skill-autocomplete#search keydown->skill-autocomplete#keydown">
      <div data-skill-autocomplete-target="spinner" class="hidden absolute right-0 top-0 bottom-0 w-12 flex items-center justify-center pointer-events-none">
        <svg class="w-5 h-5 text-primary animate-spin" fill="none" viewBox="0 0 24 24" aria-hidden="true">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>

      <!-- Dropdown autocomplete -->
      <div data-skill-autocomplete-target="dropdown"
           class="hidden absolute left-0 right-0 top-full mt-1 bg-card border border-border rounded-lg shadow-xl z-[999] max-h-80 overflow-y-auto">
      </div>
    </div>
  </form>

  <!-- Hint -->
  <p class="text-xs text-muted-foreground mt-4 pl-3">
    <span class="text-primary">Tip:</span> Tape "js", "ts", "py" ou "backend" pour des suggestions intelligentes
  </p>
</div>
