<% if skills_by_category.any? %>
  <% skills_by_category.each_with_index do |(category, skills), index| %>
    <div class="card mb-6 animate-fade-in-up" style="animation-delay: <%= 300 + (index * 50) %>ms;" data-category="<%= category %>">
      <div class="flex items-center gap-2 mb-4">
        <span class="text-primary"><%= category_icon(category, size: 20) %></span>
        <h3 class="text-lg font-semibold text-foreground"><%= category %></h3>
        <span class="text-xs text-muted-foreground">(<%= skills.count %>)</span>
      </div>

      <% if skills.any? %>
        <div class="flex flex-wrap gap-2">
          <% skills.each do |skill| %>
            <%= button_to user_skills_path(skill_id: skill.id), method: :post, class: "available-skill-btn group" do %>
              <%= skill_logo(skill, size: 16) %>
              <span><%= skill.name %></span>
              <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-muted-foreground mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-muted-foreground">Aucune compétence disponible dans cette catégorie.</p>
          <p class="text-muted-foreground text-sm mt-1">Tu as peut-être déjà ajouté toutes les compétences !</p>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="card text-center py-12 animate-fade-in-up">
    <svg class="w-16 h-16 text-muted-foreground mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
    <p class="text-muted-foreground mb-2">Aucune compétence trouvée.</p>
    <p class="text-muted-foreground text-sm">Essaie avec d'autres termes de recherche.</p>
  </div>
<% end %>
