<div class="w-full">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold tracking-tight">Créer un compte</h1>
    <p class="mt-2 text-muted-foreground">Rejoins le réseau. Build together.</p>
  </div>

  <% if alert %>
    <div class="flash-alert mb-6">
      <%= alert %>
    </div>
  <% end %>

  <div class="card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :username, "Nom d'utilisateur", class: "form-label" %>
        <%= f.text_field :username, autofocus: true, class: "form-input", placeholder: "ton_pseudo" %>
        <p class="text-xs text-muted-foreground mt-1">3-30 caractères, lettres, chiffres et underscores</p>
      </div>

      <div>
        <%= f.label :name, "Nom complet", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "Jean Dupont" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input", placeholder: "ton@email.com" %>
      </div>

      <div>
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-muted-foreground mt-1">Minimum <%= @minimum_password_length %> caractères</p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <div>
        <%= f.label :zipcode, "Code postal", class: "form-label" %>
        <%= f.text_field :zipcode, class: "form-input", placeholder: "75001" %>
        <p class="text-xs text-muted-foreground mt-1">Pour te connecter avec des builders près de chez toi</p>
      </div>

      <div class="pt-2">
        <%= f.submit "Créer mon compte", class: "w-full btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="relative my-8">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-border/40"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-4 bg-background text-muted-foreground">Déjà membre ?</span>
    </div>
  </div>

  <div class="text-center">
    <%= link_to new_session_path(resource_name), class: "btn-secondary w-full" do %>
      Se connecter
    <% end %>
  </div>

  <p class="mt-8 text-center text-sm text-muted-foreground/60">
    Pas un job board. Pas du freelance. Des projets.
  </p>
</div>
