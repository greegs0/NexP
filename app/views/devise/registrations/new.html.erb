<div class="w-full px-1">
  <div class="text-center mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold tracking-tight">Créer un compte</h1>
    <p class="mt-1.5 sm:mt-2 text-sm sm:text-base text-muted-foreground">Rejoins le réseau. Build together.</p>
  </div>

  <% if alert %>
    <div class="flash-alert mb-4 sm:mb-6 text-sm">
      <%= alert %>
    </div>
  <% end %>

  <div class="card">
    <%= render "devise/shared/oauth_buttons" %>

    <% if devise_mapping.omniauthable? %>
      <div class="relative my-4 sm:my-5">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-border/40"></div>
        </div>
        <div class="relative flex justify-center text-xs">
          <span class="px-3 bg-card text-muted-foreground">ou crée ton compte</span>
        </div>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 sm:space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :username, "Nom d'utilisateur", class: "form-label text-xs sm:text-sm" %>
        <%= f.text_field :username, autofocus: true, class: "form-input text-sm sm:text-base", placeholder: "ton_pseudo" %>
        <p class="text-xs text-muted-foreground mt-1">3-30 caractères, lettres, chiffres et underscores</p>
      </div>

      <div>
        <%= f.label :name, "Nom complet", class: "form-label text-xs sm:text-sm" %>
        <%= f.text_field :name, class: "form-input text-sm sm:text-base", placeholder: "Jean Dupont" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "form-label text-xs sm:text-sm" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input text-sm sm:text-base", placeholder: "ton@email.com" %>
      </div>

      <div>
        <%= f.label :password, "Mot de passe", class: "form-label text-xs sm:text-sm" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input text-sm sm:text-base", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-muted-foreground mt-1">Minimum <%= @minimum_password_length %> caractères</p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label text-xs sm:text-sm" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input text-sm sm:text-base", placeholder: "••••••••" %>
      </div>

      <div>
        <%= f.label :zipcode, "Code postal", class: "form-label text-xs sm:text-sm" %>
        <%= f.text_field :zipcode, class: "form-input text-sm sm:text-base", placeholder: "75001" %>
        <p class="text-xs text-muted-foreground mt-1">Pour te connecter avec des builders près de chez toi</p>
      </div>

      <div class="pt-1 sm:pt-2">
        <%= f.submit "Créer mon compte", class: "w-full btn-primary text-sm sm:text-base py-2.5 sm:py-3" %>
      </div>
    <% end %>
  </div>

  <div class="relative my-6 sm:my-8">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-border/40"></div>
    </div>
    <div class="relative flex justify-center text-xs sm:text-sm">
      <span class="px-4 bg-background text-muted-foreground">Déjà membre ?</span>
    </div>
  </div>

  <div class="text-center">
    <%= link_to new_session_path(resource_name), class: "btn-secondary w-full text-sm sm:text-base py-2.5 sm:py-3" do %>
      Se connecter
    <% end %>
  </div>

  <p class="mt-6 sm:mt-8 text-center text-xs sm:text-sm text-muted-foreground/60">
    Pas un job board. Pas du freelance. Des projets.
  </p>
</div>
