<% content_for :page_title, "Modifier mon profil" %>

<div class="max-w-4xl mx-auto pt-8 animate-fade-in-up">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-foreground">Modifier mon profil<span class="text-primary">.</span></h1>
    <p class="text-muted-foreground mt-2">Mets à jour tes informations personnelles</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Grid layout for form sections -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

      <!-- Left column - Main info (2/3 width) -->
      <div class="lg:col-span-2 space-y-6">

        <!-- Informations de base -->
        <div class="card">
          <h2 class="text-xl font-bold text-foreground mb-6 pb-4 border-b border-border">Informations de base</h2>

          <div class="space-y-5">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= f.label :username, "Nom d'utilisateur", class: "block text-sm font-semibold text-foreground mb-2" %>
                <%= f.text_field :username, class: "input", autocomplete: "username" %>
              </div>

              <div>
                <%= f.label :name, "Nom complet", class: "block text-sm font-semibold text-foreground mb-2" %>
                <%= f.text_field :name, class: "input", autocomplete: "name" %>
              </div>
            </div>

            <div>
              <%= f.label :email, "Email", class: "block text-sm font-semibold text-foreground mb-2" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p class="text-xs text-primary mt-2">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>

            <div>
              <%= f.label :bio, "Bio", class: "block text-sm font-semibold text-foreground mb-2" %>
              <%= f.text_area :bio, rows: 4, class: "input", placeholder: "Parle-nous de toi, de tes passions, de ton parcours..." %>
              <p class="text-xs text-muted-foreground mt-1">Présente-toi en quelques mots</p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= f.label :zipcode, "Code postal", class: "block text-sm font-semibold text-foreground mb-2" %>
                <%= f.text_field :zipcode, class: "input", autocomplete: "postal-code", placeholder: "75001" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Liens sociaux -->
        <div class="card">
          <h2 class="text-xl font-bold text-foreground mb-6 pb-4 border-b border-border">Liens sociaux</h2>

          <div class="space-y-5">
            <div>
              <%= f.label :portfolio_url, class: "block text-sm font-semibold text-foreground mb-2" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                  Portfolio
                </div>
              <% end %>
              <%= f.url_field :portfolio_url, class: "input", placeholder: "https://mon-portfolio.com" %>
            </div>

            <div>
              <%= f.label :github_url, class: "block text-sm font-semibold text-foreground mb-2" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                  </svg>
                  GitHub
                </div>
              <% end %>
              <%= f.url_field :github_url, class: "input", placeholder: "https://github.com/username" %>
            </div>

            <div>
              <%= f.label :linkedin_url, class: "block text-sm font-semibold text-foreground mb-2" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                  </svg>
                  LinkedIn
                </div>
              <% end %>
              <%= f.url_field :linkedin_url, class: "input", placeholder: "https://linkedin.com/in/username" %>
            </div>

            <div>
              <%= f.label :avatar_url, "URL Avatar", class: "block text-sm font-semibold text-foreground mb-2" %>
              <%= f.url_field :avatar_url, class: "input", placeholder: "https://exemple.com/avatar.jpg" %>
              <p class="text-xs text-muted-foreground mt-1">Lien direct vers une image (jpg, png, svg)</p>
            </div>
          </div>
        </div>

        <!-- Sécurité -->
        <div class="card">
          <h2 class="text-xl font-bold text-foreground mb-6 pb-4 border-b border-border">Sécurité</h2>

          <div class="space-y-5">
            <div class="bg-muted/50 p-4 rounded-lg border border-border">
              <p class="text-sm text-muted-foreground">Laisse ces champs vides si tu ne veux pas changer ton mot de passe</p>
            </div>

            <div>
              <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-semibold text-foreground mb-2" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "Minimum #{@minimum_password_length || 6} caractères" %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "block text-sm font-semibold text-foreground mb-2" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Retape ton nouveau mot de passe" %>
            </div>

            <div class="pt-4 border-t border-border">
              <%= f.label :current_password, class: "block text-sm font-semibold text-foreground mb-2" do %>
                Mot de passe actuel
                <span class="text-destructive">*</span>
              <% end %>
              <p class="text-xs text-muted-foreground mb-2">Requis pour confirmer toutes les modifications</p>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input", required: true, placeholder: "Entre ton mot de passe actuel" %>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row items-center gap-4">
          <%= f.submit "Enregistrer les modifications", class: "btn-primary px-8 py-3 text-lg w-full sm:w-auto" %>
          <%= link_to "Annuler", :back, class: "btn-secondary px-8 py-3 w-full sm:w-auto" %>
        </div>
      </div>

      <!-- Right column - Quick info & danger zone (1/3 width) -->
      <div class="space-y-6">

        <!-- Current user card -->
        <div class="card bg-primary/5 border-primary/30">
          <div class="text-center">
            <% if current_user.avatar_url.present? %>
              <%= image_tag current_user.avatar_url, alt: current_user.display_name, class: "w-20 h-20 rounded-full object-cover mx-auto mb-4 ring-2 ring-primary" %>
            <% else %>
              <div class="w-20 h-20 rounded-full stat-gradient-primary text-white flex items-center justify-center text-2xl font-bold mx-auto mb-4">
                <%= current_user.display_name.first.upcase %>
              </div>
            <% end %>
            <h3 class="font-bold text-lg text-foreground"><%= current_user.display_name %></h3>
            <p class="text-sm text-muted-foreground">@<%= current_user.username %></p>
            <div class="mt-3 flex items-center justify-center gap-2 text-sm">
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span class="text-muted-foreground font-medium">Niveau <%= current_user.level %></span>
            </div>
          </div>
        </div>

        <!-- Tips -->
        <div class="card bg-muted/30">
          <h3 class="font-semibold text-foreground mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Conseils
          </h3>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>Un profil complet attire plus de collaborateurs</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>Ajoute tes liens sociaux pour faciliter les connexions</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-primary mt-0.5">•</span>
              <span>Une bio claire aide les autres à mieux te connaître</span>
            </li>
          </ul>
        </div>

        <!-- Danger zone -->
        <div class="card border-destructive/50 bg-destructive/5">
          <h3 class="font-semibold text-destructive mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            Zone de danger
          </h3>
          <p class="text-sm text-muted-foreground mb-4">Cette action est irréversible. Toutes tes données seront définitivement supprimées.</p>
          <%= button_to "Supprimer mon compte",
              registration_path(resource_name),
              data: { confirm: "Es-tu absolument sûr(e) ? Cette action ne peut pas être annulée et toutes tes données seront perdues.", turbo_confirm: "Es-tu absolument sûr(e) ?" },
              method: :delete,
              class: "w-full px-4 py-2 bg-destructive text-destructive-foreground rounded-lg hover:bg-destructive/90 transition font-medium" %>
        </div>
      </div>

    </div>
  <% end %>
</div>
