<div class="w-full px-1">
  <div class="text-center mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold tracking-tight">Connexion</h1>
    <p class="mt-1.5 sm:mt-2 text-sm sm:text-base text-muted-foreground">Ravi de te revoir !</p>
  </div>

  <% if alert %>
    <div class="flash-alert mb-4 sm:mb-6 text-sm">
      <%= alert %>
    </div>
  <% end %>

  <div class="card">
    <%= render "devise/shared/oauth_buttons" %>

    <% if devise_mapping.omniauthable? %>
      <div class="relative my-4 sm:my-5">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-border/40"></div>
        </div>
        <div class="relative flex justify-center text-xs">
          <span class="px-3 bg-card text-muted-foreground">ou avec ton email</span>
        </div>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 sm:space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, "Email", class: "form-label text-xs sm:text-sm" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input text-sm sm:text-base", placeholder: "ton@email.com" %>
      </div>

      <div>
        <%= f.label :password, "Mot de passe", class: "form-label text-xs sm:text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input text-sm sm:text-base", placeholder: "••••••••" %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 sm:gap-0">
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-primary bg-secondary border-border focus:ring-primary" %>
            <%= f.label :remember_me, "Se souvenir", class: "ml-2 text-xs sm:text-sm text-muted-foreground" %>
          </div>
        <% end %>

        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-xs sm:text-sm text-primary hover:text-primary/80 transition" %>
      </div>

      <div>
        <%= f.submit "Se connecter", class: "w-full btn-primary text-sm sm:text-base py-2.5 sm:py-3" %>
      </div>
    <% end %>
  </div>

  <div class="relative my-6 sm:my-8">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-border/40"></div>
    </div>
    <div class="relative flex justify-center text-xs sm:text-sm">
      <span class="px-4 bg-background text-muted-foreground">Nouveau sur NexP ?</span>
    </div>
  </div>

  <div class="text-center">
    <%= link_to new_registration_path(resource_name), class: "btn-secondary w-full text-sm sm:text-base py-2.5 sm:py-3" do %>
      Créer un compte
    <% end %>
  </div>

  <p class="mt-6 sm:mt-8 text-center text-xs sm:text-sm text-muted-foreground/60">
    Pas un job board. Pas du freelance. Des projets.
  </p>
</div>
