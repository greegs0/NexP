<% content_for :page_title, "Préférences de notifications" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8 animate-fade-in-up flex items-center justify-between">
    <div>
      <h1 class="text-3xl md:text-4xl font-bold text-foreground tracking-tight mb-2">
        Préférences de notifications<span class="text-primary">.</span>
      </h1>
      <p class="text-muted-foreground">Choisis les notifications que tu souhaites recevoir</p>
    </div>

    <%= link_to notifications_path, class: "btn-secondary" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Retour aux notifications
    <% end %>
  </div>

  <%= form_with url: notification_preferences_path, method: :patch, class: "space-y-6" do |f| %>
    <!-- Interactions Posts -->
    <div class="card animate-fade-in-up" style="animation-delay: 100ms;">
      <h2 class="text-xl font-bold text-foreground mb-1 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
        </svg>
        Interactions sur tes posts
      </h2>
      <p class="text-sm text-muted-foreground mb-4">Reçois des notifications quand quelqu'un interagit avec tes contenus</p>

      <div class="space-y-3">
        <% ['like', 'comment', 'comment_reply'].each do |type| %>
          <% pref = @preferences[type] %>
          <%= render 'preference_row', f: f, pref: pref, type: type %>
        <% end %>
      </div>
    </div>

    <!-- Social -->
    <div class="card animate-fade-in-up" style="animation-delay: 200ms;">
      <h2 class="text-xl font-bold text-foreground mb-1 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Social
      </h2>
      <p class="text-sm text-muted-foreground mb-4">Interactions sociales et mentions</p>

      <div class="space-y-3">
        <% ['follow', 'mention', 'post_mention'].each do |type| %>
          <% pref = @preferences[type] %>
          <%= render 'preference_row', f: f, pref: pref, type: type %>
        <% end %>
      </div>
    </div>

    <!-- Projets -->
    <div class="card animate-fade-in-up" style="animation-delay: 300ms;">
      <h2 class="text-xl font-bold text-foreground mb-1 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        Projets et équipes
      </h2>
      <p class="text-sm text-muted-foreground mb-4">Activité sur tes projets et équipes</p>

      <div class="space-y-3">
        <% ['project_join', 'project_invite', 'project_update', 'team_join'].each do |type| %>
          <% pref = @preferences[type] %>
          <%= render 'preference_row', f: f, pref: pref, type: type %>
        <% end %>
      </div>
    </div>

    <!-- Compétences & Système -->
    <div class="card animate-fade-in-up" style="animation-delay: 400ms;">
      <h2 class="text-xl font-bold text-foreground mb-1 flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
        </svg>
        Compétences et système
      </h2>
      <p class="text-sm text-muted-foreground mb-4">Badges, compétences et autres notifications</p>

      <div class="space-y-3">
        <% ['skill_add', 'skill_level_up', 'badge_earned', 'message', 'bookmark_update', 'weekly_summary'].each do |type| %>
          <% pref = @preferences[type] %>
          <%= render 'preference_row', f: f, pref: pref, type: type %>
        <% end %>
      </div>
    </div>

    <!-- Bouton de sauvegarde -->
    <div class="flex justify-end animate-fade-in-up" style="animation-delay: 500ms;">
      <%= f.submit "Enregistrer les préférences", class: "btn-primary" %>
    </div>
  <% end %>
</div>
