<header class="landing-header" data-controller="mobile-menu">
  <div class="landing-header-inner">
    <%= link_to root_path, class: "flex items-center gap-2" do %>
      <span class="logo">NexP<span class="logo-accent">.</span></span>
    <% end %>

    <nav class="hidden items-center gap-8 md:flex">
      <a href="#comment-ca-marche" class="text-sm text-muted-foreground transition-colors hover:text-foreground">
        Comment ça marche
      </a>
      <a href="#cas-usage" class="text-sm text-muted-foreground transition-colors hover:text-foreground">
        Pour qui
      </a>
      <a href="#tarifs" class="text-sm text-muted-foreground transition-colors hover:text-foreground">
        Tarifs
      </a>
    </nav>

    <div class="hidden items-center gap-4 md:flex">
      <!-- Theme Toggle -->
      <div data-controller="theme" class="flex items-center">
        <button data-action="click->theme#toggle" class="p-2 hover:bg-secondary/50 transition-colors relative group" style="border-radius: var(--radius);" aria-label="Changer le thème">
          <!-- Sun icon (shown in dark mode) -->
          <svg data-theme-target="sunIcon" class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg data-theme-target="moonIcon" class="hidden w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
        </button>
      </div>
      <%= link_to "Connexion", new_user_session_path, class: "btn-ghost text-sm" %>
      <%= link_to "Rejoindre", new_user_registration_path, class: "btn-primary btn-sm" %>
    </div>

    <button class="md:hidden p-2" data-action="click->mobile-menu#toggle" aria-label="Ouvrir le menu">
      <svg data-mobile-menu-target="openIcon" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <svg data-mobile-menu-target="closeIcon" class="h-5 w-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <div class="mobile-menu hidden md:hidden" data-mobile-menu-target="menu">
    <nav class="flex flex-col gap-4">
      <a href="#comment-ca-marche" class="mobile-menu-link">Comment ça marche</a>
      <a href="#cas-usage" class="mobile-menu-link">Pour qui</a>
      <a href="#tarifs" class="mobile-menu-link">Tarifs</a>
      <div class="flex flex-col gap-2 pt-4">
        <!-- Theme Toggle Mobile -->
        <div data-controller="theme" class="flex items-center gap-2 py-2">
          <button data-action="click->theme#toggle" class="flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors" aria-label="Changer le thème">
            <svg data-theme-target="sunIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <svg data-theme-target="moonIcon" class="hidden w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <span data-theme-target="label">Mode clair</span>
          </button>
        </div>
        <%= link_to "Connexion", new_user_session_path, class: "btn-ghost text-sm justify-start" %>
        <%= link_to "Rejoindre", new_user_registration_path, class: "btn-primary btn-sm" %>
      </div>
    </nav>
  </div>
</header>
