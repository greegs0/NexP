  <!-- Skills Section -->
  <div class="card mb-8 animate-fade-in-up" style="animation-delay: 100ms;">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-foreground">Compétences (<%= @user_skills.count %>)</h2>
      </div>
      <% if @is_current_user %>
        <%= link_to "Gérer", skills_path, class: "text-primary hover:text-primary/80 font-medium" %>
      <% end %>
    </div>

    <% if @user_skills.any? %>
      <div class="space-y-6">
        <% @user_skills.group_by { |us| us.skill.category }.each do |category, user_skills| %>
          <div>
            <h3 class="flex items-center gap-2 text-sm font-medium text-muted-foreground mb-3">
              <%= category_icon(category) %>
              <%= category %>
            </h3>
            <div class="flex flex-wrap gap-3">
              <% user_skills.each do |user_skill| %>
                <div class="skill-profile-card" id="user_skill_<%= user_skill.id %>">
                  <%= skill_logo(user_skill.skill, size: 18) %>
                  <span class="font-medium text-foreground truncate"><%= user_skill.skill.name %></span>
                  <span class="skill-proficiency-badge skill-proficiency-<%= user_skill.proficiency_level %>">
                    <%= user_skill.proficiency_label %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="w-12 h-12 text-muted-foreground mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <p class="text-muted-foreground">Aucune compétence ajoutée</p>
      </div>
    <% end %>
  </div>

  <!-- Projects Section -->
  <div class="card mb-8 animate-fade-in-up" style="animation-delay: 150ms;">
    <div class="flex items-center gap-2 mb-6">
      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h2 class="text-2xl font-bold text-foreground">Projets (<%= @total_projects %>)</h2>
    </div>

    <% if @owned_projects.any? %>
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-muted-foreground mb-4">Projets créés (<%= @owned_projects.size %>)</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @owned_projects.each do |project| %>
            <div class="card group">
              <div class="flex items-start justify-between mb-2">
                <h4 class="text-lg font-bold text-foreground flex-1 group-hover:text-primary transition-colors">
                  <%= link_to project.title, project_path(project) %>
                </h4>
                <span class="px-2 py-1 text-xs rounded-full font-medium <%= %w[open in_progress].include?(project.status) ? 'bg-primary text-primary-foreground' : 'bg-secondary text-secondary-foreground' %>">
                  <%= translate_status(project.status) %>
                </span>
              </div>
              <p class="text-muted-foreground text-sm mb-3"><%= truncate(project.description, length: 100) %></p>
              <% if project.skills.any? %>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% project.skills.limit(3).each do |skill| %>
                    <span class="text-xs px-2 py-1 bg-secondary text-secondary-foreground rounded">
                      <%= skill.name %>
                    </span>
                  <% end %>
                </div>
              <% end %>
              <%= link_to project_path(project), class: "text-primary hover:text-primary/80 text-sm font-medium inline-flex items-center gap-1" do %>
                Voir le projet
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @participated_projects.any? %>
      <div>
        <h3 class="text-lg font-semibold text-muted-foreground mb-4">Projets rejoints (<%= @participated_projects.size %>)</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @participated_projects.each do |project| %>
            <div class="card group">
              <div class="flex items-start justify-between mb-2">
                <h4 class="text-lg font-bold text-foreground flex-1 group-hover:text-primary transition-colors">
                  <%= link_to project.title, project_path(project) %>
                </h4>
                <span class="px-2 py-1 text-xs rounded-full font-medium <%= %w[open in_progress].include?(project.status) ? 'bg-primary text-primary-foreground' : 'bg-secondary text-secondary-foreground' %>">
                  <%= translate_status(project.status) %>
                </span>
              </div>
              <p class="text-muted-foreground text-sm mb-3">Par <%= project.owner.display_name %></p>
              <% if project.skills.any? %>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% project.skills.limit(3).each do |skill| %>
                    <span class="text-xs px-2 py-1 bg-secondary text-secondary-foreground rounded">
                      <%= skill.name %>
                    </span>
                  <% end %>
                </div>
              <% end %>
              <%= link_to project_path(project), class: "text-primary hover:text-primary/80 text-sm font-medium inline-flex items-center gap-1" do %>
                Voir le projet
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @owned_projects.empty? && @participated_projects.empty? %>
      <div class="text-center py-8">
        <svg class="w-12 h-12 text-muted-foreground mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <p class="text-muted-foreground mb-4">Aucun projet</p>
        <% if @is_current_user %>
          <div class="flex gap-3 justify-center">
            <%= link_to new_project_path, class: "btn-primary inline-flex items-center gap-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Créer un projet
            <% end %>
            <%= link_to "Parcourir les projets", projects_path, class: "btn-secondary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
