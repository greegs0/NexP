<% content_for :page_title, @user.display_name %>

<div class="max-w-7xl mx-auto">
  <!-- Profile Header -->
  <div class="card mb-8 animate-fade-in-up">
    <div class="flex flex-col md:flex-row gap-6">
      <!-- Avatar -->
      <div class="flex-shrink-0">
        <% if @user.avatar_url.present? %>
          <%= image_tag @user.avatar_url, alt: @user.display_name, class: "w-32 h-32 rounded-full object-cover ring-4 ring-primary/20" %>
        <% else %>
          <div class="w-32 h-32 rounded-full stat-gradient-primary text-white flex items-center justify-center text-4xl font-bold ring-4 ring-primary/20">
            <%= @user.display_name.first.upcase %>
          </div>
        <% end %>
      </div>

      <!-- Profile Info -->
      <div class="flex-1">
        <div class="mb-4">
          <h1 class="text-3xl font-bold text-foreground tracking-tight">
            <%= @user.display_name %><span class="text-primary">.</span>
          </h1>
          <p class="text-muted-foreground">@<%= @user.username %></p>
        </div>

        <% if @user.bio.present? %>
          <p class="text-muted-foreground mb-4"><%= @user.bio %></p>
        <% end %>

        <div class="flex flex-wrap gap-4 mb-4 text-sm">
          <% if @user.zipcode.present? %>
            <span class="flex items-center gap-1 text-muted-foreground">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <%= @user.zipcode %>
            </span>
          <% end %>

          <span class="flex items-center gap-1 text-muted-foreground">
            <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            Niveau <%= @user.level %> (<%= @user.experience_points %> XP)
          </span>

          <% if @is_current_user %>
            <span class="flex items-center gap-2" id="availability_toggle">
              <label class="availability-toggle-switch" aria-label="Toggle availability">
                <input type="checkbox" <%= @user.available ? 'checked' : '' %> data-controller="availability-toggle" data-availability-toggle-user-id-value="<%= @user.id %>" data-action="change->availability-toggle#toggle" class="availability-toggle-checkbox">
                <span class="availability-toggle-slider"></span>
              </label>
              <span class="text-sm text-muted-foreground" data-availability-toggle-target="label"><%= @user.available ? 'En recherche de projet' : 'Pas en recherche' %></span>
            </span>
          <% elsif @user.available %>
            <span class="px-3 py-1 bg-success text-white rounded-full text-xs font-medium flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              En recherche de projet
            </span>
          <% end %>
        </div>

        <div class="flex flex-wrap gap-2 mb-4">
          <% if @user.portfolio_url.present? %>
            <%= link_to @user.portfolio_url, target: "_blank", rel: "noopener", class: "inline-flex items-center gap-2 btn-secondary text-sm" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
              Portfolio
            <% end %>
          <% end %>
          <% if @user.github_url.present? %>
            <%= link_to @user.github_url, target: "_blank", rel: "noopener", class: "inline-flex items-center gap-2 btn-secondary text-sm" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
              </svg>
              GitHub
            <% end %>
          <% end %>
          <% if @user.linkedin_url.present? %>
            <%= link_to @user.linkedin_url, target: "_blank", rel: "noopener", class: "inline-flex items-center gap-2 btn-secondary text-sm" do %>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
              LinkedIn
            <% end %>
          <% end %>
        </div>

        <div class="flex flex-wrap gap-3">
          <% if @is_current_user %>
            <%= link_to edit_user_registration_path, class: "btn-primary inline-flex items-center gap-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Modifier mon profil
            <% end %>
          <% else %>
            <!-- Bouton Follow/Unfollow -->
            <% if current_user.following?(@user) %>
              <%= button_to unfollow_user_path(@user), method: :delete, class: "btn-secondary inline-flex items-center gap-2", data: { turbo_confirm: "Ne plus suivre #{@user.display_name} ?" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6"></path>
                </svg>
                Ne plus suivre
              <% end %>
            <% else %>
              <%= button_to follow_user_path(@user), method: :post, class: "btn-primary inline-flex items-center gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Suivre
              <% end %>
            <% end %>

            <!-- Bouton Envoyer un message -->
            <%= link_to conversation_path(@user), class: "btn-secondary inline-flex items-center gap-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Envoyer un message
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Badges Section -->
