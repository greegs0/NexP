<% content_for :page_title, "Développeurs" %>

<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-4 sm:mb-8 animate-fade-in-up">
    <div class="hidden sm:inline-flex items-center gap-2 text-sm font-mono text-muted-foreground mb-2">
      Communauté de développeurs
    </div>
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-foreground tracking-tight mb-1 sm:mb-2">
      Trouve ton équipe<span class="text-primary">.</span>
    </h1>
    <p class="text-sm sm:text-base text-muted-foreground">Connecte-toi avec des développeurs talentueux</p>
  </div>

  <!-- Barre de recherche -->
  <div class="card mb-4 sm:mb-8 animate-fade-in-up" style="animation-delay: 100ms;">
    <form class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
      <div class="sm:col-span-2 relative group">
        <div class="absolute left-0 top-0 bottom-0 w-12 flex items-center justify-center pointer-events-none">
          <svg class="w-5 h-5 text-muted-foreground group-focus-within:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <input type="text"
               name="search"
               placeholder="Rechercher par nom, username ou bio..."
               value="<%= params[:search] %>"
               class="input pl-12">
      </div>

      <div>
        <button type="submit" class="btn-primary w-full">
          Rechercher
        </button>
      </div>
    </form>
  </div>

  <!-- Liste des utilisateurs -->
  <% if @users.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 lg:gap-6 mb-4 sm:mb-8">
      <% @users.each_with_index do |user, index| %>
        <div class="card animate-fade-in-up hover:border-primary/50 transition-colors" style="animation-delay: <%= 150 + (index * 50) %>ms;">
          <%= link_to user_path(user), class: "block" do %>
            <!-- Avatar et info -->
            <div class="flex items-start gap-3 sm:gap-4 mb-3 sm:mb-4">
              <div class="w-12 h-12 sm:w-16 sm:h-16 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold text-xl sm:text-2xl flex-shrink-0">
                <%= user.display_name[0].upcase %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-bold text-base sm:text-lg text-foreground hover:text-primary block truncate"><%= user.display_name %></p>
                <p class="text-xs sm:text-sm text-muted-foreground">@<%= user.username %></p>
                <div class="flex items-center gap-1 sm:gap-2 mt-1 flex-wrap">
                  <span class="text-xs px-2 py-1 bg-primary/10 text-primary rounded">
                    Niveau <%= user.level %>
                  </span>
                  <% if user.available %>
                    <span class="text-xs px-2 py-1 bg-green-500/10 text-green-500 rounded flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                      </svg>
                      En recherche
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Bio -->
            <% if user.bio.present? %>
              <p class="text-xs sm:text-sm text-muted-foreground mb-3 sm:mb-4 line-clamp-2"><%= user.bio %></p>
            <% end %>

            <!-- Skills -->
            <% if user.skills.any? %>
              <div class="flex flex-wrap gap-1 mb-3 sm:mb-4">
                <% user.skills.limit(3).each do |skill| %>
                  <span class="text-xs px-2 py-1 bg-secondary text-secondary-foreground rounded">
                    <%= skill.name %>
                  </span>
                <% end %>
                <% if user.skills.count > 3 %>
                  <span class="text-xs px-2 py-1 bg-muted text-muted-foreground rounded">
                    +<%= user.skills.count - 3 %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <!-- Stats -->
            <div class="flex items-center justify-between text-xs sm:text-sm text-muted-foreground border-t border-border pt-3 sm:pt-4 <%= user != current_user ? 'mb-3' : '' %>">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                <%= user.owned_projects.count %> projets
              </div>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= user.followers.count %> followers
              </div>
            </div>
          <% end %>

          <!-- Bouton Message (en dehors du link_to) -->
          <% if user != current_user %>
            <%= link_to conversation_path(user), class: "btn-primary w-full text-sm inline-flex items-center justify-center gap-2", data: { turbo: false } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Envoyer un message
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center animate-fade-in">
      <%= paginate @users %>
    </div>
  <% else %>
    <div class="card text-center py-8 sm:py-16 animate-fade-in-up">
      <svg class="w-12 h-12 sm:w-16 sm:h-16 text-muted-foreground mx-auto mb-3 sm:mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <p class="text-sm sm:text-base text-muted-foreground">Aucun développeur trouvé.</p>
    </div>
  <% end %>
</div>
