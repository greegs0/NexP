<% content_for :page_title, @post.user.display_name + "'s post" %>

<div class="max-w-4xl mx-auto">
  <!-- Navigation retour -->
  <div class="mb-6 animate-fade-in-up">
    <%= link_to posts_path, class: "inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Retour aux posts
    <% end %>
  </div>

  <!-- Post principal -->
  <div class="card mb-6 animate-fade-in-up" style="animation-delay: 100ms;">
    <!-- Header du post -->
    <div class="flex items-start justify-between mb-6">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-primary text-primary-foreground rounded-full flex items-center justify-center font-bold text-lg">
          <%= @post.user.display_name[0].upcase %>
        </div>
        <div>
          <%= link_to @post.user.display_name, user_path(@post.user), class: "font-bold text-foreground hover:text-primary text-lg" %>
          <div class="text-sm text-muted-foreground">
            <%= time_ago_in_words(@post.created_at) %> ago
          </div>
        </div>
      </div>
      <% if @post.user == current_user %>
        <div class="flex gap-2">
          <%= link_to edit_post_path(@post), class: "text-muted-foreground hover:text-primary p-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Contenu -->
    <div class="mb-6">
      <p class="text-foreground text-lg whitespace-pre-wrap"><%= @post.content %></p>
      <% if @post.image.attached? %>
        <div class="mt-4">
          <%= image_tag @post.image.variant(resize_to_limit: [800, 600]), class: "rounded-lg border border-border w-full" %>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="flex items-center gap-6 text-muted-foreground border-t border-border pt-4">
      <%= render 'like_button', post: @post, size: 6, show_count_label: true %>

      <div class="inline-flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span class="font-medium"><%= @post.comments_count %> <%= @post.comments_count == 1 ? 'commentaire' : 'commentaires' %></span>
      </div>
    </div>
  </div>

  <!-- Section commentaires -->
  <div class="animate-fade-in-up" style="animation-delay: 200ms;">
    <h2 class="text-2xl font-bold text-foreground mb-4">
      Commentaires
      <span class="text-base font-normal text-muted-foreground">(<%= @post.comments_count %>)</span>
    </h2>

    <!-- Liste des commentaires -->
    <% if @comments.any? %>
      <div class="space-y-4 mb-6">
        <% @comments.each do |comment| %>
          <%= render 'comments/comment', comment: comment, post: @post, depth: 0 %>
        <% end %>
      </div>
    <% else %>
      <div class="card text-center py-12 mb-6">
        <svg class="w-12 h-12 text-muted-foreground mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <p class="text-muted-foreground">Aucun commentaire pour l'instant. Sois le premier Ã  commenter!</p>
      </div>
    <% end %>

    <!-- Formulaire de nouveau commentaire (en bas) -->
    <div class="card sticky bottom-4 shadow-lg">
      <%= form_with(model: [@post, Comment.new], url: post_comments_path(@post), class: "space-y-4") do |form| %>
        <%= form.text_area :content,
          rows: 3,
          class: "input w-full",
          placeholder: "Ajoute un commentaire...",
          required: true %>
        <div class="flex items-center justify-between gap-4">
          <%= form.file_field :image,
            accept: 'image/*',
            class: "text-sm text-muted-foreground file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-medium file:bg-primary file:text-primary-foreground hover:file:bg-primary/90 file:cursor-pointer" %>
          <%= form.submit "Commenter", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
