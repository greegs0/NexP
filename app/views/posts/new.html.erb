<% content_for :page_title, "Nouveau post" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-8 animate-fade-in-up">
    <h1 class="text-3xl font-bold text-foreground mb-2">
      Créer un post<span class="text-primary">.</span>
    </h1>
    <p class="text-muted-foreground">Partage tes idées avec la communauté</p>
  </div>

  <div class="card animate-fade-in-up" style="animation-delay: 100ms;">
    <%= form_with(model: @post, class: "space-y-6") do |form| %>
      <% if @post.errors.any? %>
        <div class="bg-destructive/10 border border-destructive/20 rounded-md p-4">
          <h2 class="text-sm font-semibold text-destructive mb-2"><%= pluralize(@post.errors.count, "erreur") %> à corriger :</h2>
          <ul class="list-disc list-inside text-sm text-destructive space-y-1">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :content, "Contenu", class: "block text-sm font-medium text-foreground mb-2" %>
        <%= form.text_area :content,
          rows: 10,
          class: "input w-full",
          placeholder: "Partage tes idées, tes découvertes, tes questions...",
          required: true %>
        <p class="text-sm text-muted-foreground mt-2">Maximum 5000 caractères</p>
      </div>

      <div>
        <%= form.label :image, "Image (optionnelle)", class: "block text-sm font-medium text-foreground mb-2" %>
        <%= form.file_field :image,
          accept: "image/png,image/jpg,image/jpeg,image/gif,image/webp",
          class: "input w-full",
          direct_upload: true %>
        <p class="text-sm text-muted-foreground mt-2">JPEG, PNG, GIF ou WebP - Maximum 5 Mo</p>
      </div>

      <div class="flex gap-3">
        <%= form.submit "Publier", class: "btn-primary" %>
        <%= link_to "Annuler", posts_path, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
