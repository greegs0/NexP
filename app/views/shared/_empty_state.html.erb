<%# État vide réutilisable
    Paramètres:
    - icon: Nom de l'icône (optionnel)
    - title: Titre principal (requis)
    - description: Description additionnelle (optionnel)
    - action_text: Texte du bouton d'action (optionnel)
    - action_path: Chemin du bouton d'action (optionnel)
    - action_class: Classes CSS du bouton (défaut: "btn-primary")
%>
<% action_class ||= 'btn-primary' %>
<div class="text-center py-8">
  <% if local_assigns[:icon] %>
    <div class="w-12 h-12 text-muted-foreground mx-auto mb-3">
      <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <% case icon %>
        <% when 'inbox' %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        <% when 'document' %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        <% when 'users' %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        <% when 'folder' %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
        <% when 'chat' %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        <% end %>
      </svg>
    </div>
  <% end %>

  <p class="text-muted-foreground mb-2"><%= title %></p>

  <% if local_assigns[:description] %>
    <p class="text-sm text-muted-foreground/70 mb-4"><%= description %></p>
  <% end %>

  <% if local_assigns[:action_text] && local_assigns[:action_path] %>
    <%= link_to action_text, action_path, class: "inline-flex items-center px-4 py-2 rounded-md text-sm font-medium #{action_class}" %>
  <% end %>
</div>
