<aside data-sidebar-target="sidebar" class="sidebar" role="navigation" aria-label="Menu principal">
  <div class="flex flex-col h-full">
    <div class="p-4 border-b border-sidebar-border">
      <div class="flex items-center justify-between gap-2">
        <%= link_to root_path, class: "sidebar-logo-link" do %>
          <span class="sidebar-logo-full logo">NexP<span class="logo-accent">.</span></span>
          <%= image_tag "logo-compact.svg", class: "sidebar-logo-compact", alt: "NexP" %>
        <% end %>

        <!-- Toggle button (collapse) - inside sidebar -->
        <button data-action="click->sidebar#toggle" class="sidebar-toggle-inside" aria-label="Réduire le menu">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
          </svg>
        </button>
      </div>
    </div>

    <nav class="flex-1 p-3 space-y-1 overflow-y-auto">
      <%= link_to dashboard_path, class: "sidebar-link #{current_page?(dashboard_path) ? 'active' : ''}" do %>
        <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="sidebar-text">Dashboard</span>
      <% end %>

      <%= link_to skills_path, class: "sidebar-link #{current_page?(skills_path) ? 'active' : ''}" do %>
        <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="sidebar-text">Compétences</span>
      <% end %>

      <%= link_to projects_path, class: "sidebar-link #{current_page?(projects_path) ? 'active' : ''}" do %>
        <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <span class="sidebar-text">Projets</span>
      <% end %>

      <% if current_user %>
        <%= link_to feed_path, class: "sidebar-link #{current_page?(feed_path) ? 'active' : ''}" do %>
          <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          <span class="sidebar-text">Feed</span>
        <% end %>

        <%= link_to users_path, class: "sidebar-link #{current_page?(users_path) ? 'active' : ''}" do %>
          <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="sidebar-text">Développeurs</span>
        <% end %>

        <%= link_to conversations_path, class: "sidebar-link #{current_page?(conversations_path) ? 'active' : ''}" do %>
          <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
          </svg>
          <span class="sidebar-text">Messages</span>
        <% end %>

        <%= link_to bookmarks_path, class: "sidebar-link #{current_page?(bookmarks_path) ? 'active' : ''}" do %>
          <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          <span class="sidebar-text">Favoris</span>
        <% end %>
      <% end %>

      <% if current_user %>
        <%= link_to user_path(current_user), class: "sidebar-link #{current_page?(user_path(current_user)) ? 'active' : ''}" do %>
          <svg class="sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="sidebar-text">Mon Profil</span>
        <% end %>
      <% end %>
    </nav>

    <% if current_user %>
      <div class="p-4 border-t border-sidebar-border">
        <div class="flex items-center space-x-3 sidebar-user-info">
          <div class="w-10 h-10 flex items-center justify-center text-primary-foreground font-bold bg-primary" style="border-radius: var(--radius);">
            <%= current_user.username[0].upcase %>
          </div>
          <div class="flex-1 sidebar-text">
            <p class="text-sm font-medium text-foreground"><%= current_user.display_name %></p>
            <p class="text-xs text-muted-foreground">Niveau <%= current_user.level %></p>
          </div>
        </div>

        <%= button_to destroy_user_session_path, method: :delete, class: "mt-3 w-full btn-secondary text-sm sidebar-logout-btn flex items-center justify-center gap-2" do %>
          <svg class="sidebar-logout-icon hidden w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span class="sidebar-text">Déconnexion</span>
        <% end %>
      </div>
    <% end %>
  </div>
</aside>

<!-- Toggle button (expand) - outside sidebar -->
<button data-action="click->sidebar#toggle" class="sidebar-toggle-outside" aria-label="Ouvrir le menu">
  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
  </svg>
</button>

<div data-sidebar-target="overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-30 hidden md:hidden" data-action="click->sidebar#close"></div>
